<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Add_Business">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="410dp"
        android:layout_height="886dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <!-- Wrapping all child elements inside a single LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_add_business"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Add Business"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_your_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your name:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_your_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name" />

            <TextView
                android:id="@+id/tv_business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business name:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter business name" />

            <TextView
                android:id="@+id/tv_business_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business category:"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/sp_business_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/tv_business_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business address:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_business_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter business address" />

            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone no:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter telephone no" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="359dp"
                android:layout_height="90dp"
                android:hint="Enter description"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/tv_business_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business image:"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_business_image"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Business Image" />

                <Button
                    android:id="@+id/btn_choose_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
